?>

<div id="chooser_recent">
    <table id="chooser_recent_table">

        <?php if (count($block->getCategories()) <= 0) : ?>
            <tr>
                <td colspan="2" style="text-align: center;">
                    <strong><?php echo $block->__('No recently used Categories'); ?></strong>
                </td>
            </tr>
        <?php endif; ?>

        <?php foreach ($block->getCategories() as $category) : ?>
            <?php $nodeId       = $block->getHelper('Data')->escapeJs($block->getHelper('Data')->escapeHtml($category['browsenode_id'])); ?>
            <?php $categoryPath = $block->getHelper('Data')->escapeJs($block->getHelper('Data')->escapeHtml($category['path'])); ?>

            <tr>
                <td>
                    <?php echo $category['path'] .' ('.$category['browsenode_id'].')'; ?>
                </td>
                <td>
                    <a href="javascript:void(0)" onclick="AmazonTemplateDescriptionCategoryChooserObj.recentClickCategory('<?php echo $nodeId; ?>','<?php echo $categoryPath; ?>');"><?php echo $block->__('Select'); ?></a>
                </td>
            </tr>
        <?php endforeach; ?>

    </table>
</div>
