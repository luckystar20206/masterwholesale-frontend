        <observer name="porto_settings" instance="Smartwave\Porto\Observer\SavePortoSettings"/>
    </event>
    <event name="admin_system_config_changed_section_porto_design">
        <observer name="porto_design" instance="Smartwave\Porto\Observer\SavePortoDesign"/>
