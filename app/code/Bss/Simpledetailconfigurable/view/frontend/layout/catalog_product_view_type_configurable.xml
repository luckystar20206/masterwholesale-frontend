<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.options.wrapper">
            <referenceBlock name="product.info.options.swatches" remove="true" />
            <block name="bss.product.info.options.swatches" class="Bss\Simpledetailconfigurable\Block\ConfigurableControl" before="-" />
        </referenceBlock>
        <referenceBlock name="product.info.description">
		    <action method="setTemplate">
		        <argument name="template" xsi:type="string">Bss_Simpledetailconfigurable::product/description.phtml</argument>
		    </action>
		</referenceBlock>
        <referenceBlock name="product.attributes">
		    <action method="setTemplate">
		        <argument name="template" xsi:type="string">Bss_Simpledetailconfigurable::product/attributes.phtml</argument>
		    </action>
		</referenceBlock>
    </body>
</page>
